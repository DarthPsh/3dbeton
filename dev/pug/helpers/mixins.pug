mixin icon(name,mod)
	if(mod)
		svg(class="svg-sprite-icon icon-" + name + ' ' + mod)
			use(xlink:href="assets/images/sprite/symbol/sprite.svg#" + name)
	else
		svg(class="svg-sprite-icon icon-" + name)
			use(xlink:href="assets/images/sprite/symbol/sprite.svg#" + name)

mixin section-title(data)
	.section-title
		h2.section-title__name= data.name
		a(href=""+ data.href +"").section-title__link= data.link

mixin section-title_b(data)
	.section-title.section-title_b
		h2.section-title__name= data.name
		a(href=""+ data.href +"").section-title__link= data.link

mixin page-title(name)
	.page-title
		.container 
			h1.page-title__name= name